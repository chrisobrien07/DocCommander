@model DocCommander.Data.SysListItem

@using (Ajax.BeginForm("Delete", "SysListItem", new AjaxOptions() { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "sys-list-items", OnSuccess = "HideForm" }, new { @class = "form-horizontal" }))
{
    
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Delete List Item</h4>
    </div>
    <div class="modal-body" id="modal-body">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <h3>Are you sure you want to delete this?</h3>
        <div class="form-group">
            <label>List Name</label>
            @Html.DisplayFor(model=>model.SysList.Name)
        </div>
    
        <div class="form-group">
            @Html.LabelFor(model => model.Value)
            @Html.DisplayFor(model=>model.Value)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ShortCode)
            @Html.DisplayFor(model=>model.ShortCode)
        </div>

    </div>
    <div class="modal-footer">
        <button type="submit" id="modal-submit-btn" class="btn btn-primary">Delete</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>

    
    
}
