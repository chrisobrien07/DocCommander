@model DocCommander.Data.NumConfig


@using (Ajax.BeginForm("Delete", "NumConfig", new AjaxOptions() { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "numlist", OnSuccess = "HideForm" }, new { @class = "form-horizontal" }))
{
    
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Delete List</h4>
    </div>
    <div class="modal-body" id="modal-body">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model=>model.NumConfigId)
        
        <h3>Are you sure you want to delete this?</h3>
        <div class="form-group">
            <div class="col-md-2"><strong>@Html.DisplayNameFor(model => model.Name)</strong></div>
            @Html.DisplayFor(model=>model.Name)
        </div>

        <div class="form-group">
            <div class="col-md-2"><strong>@Html.DisplayNameFor(model => model.IsHierarchy)</strong></div>
            @Html.DisplayFor(model=>model.IsHierarchy)
        </div>

        <div class="form-group">
            <div class="col-md-2"><strong>@Html.DisplayNameFor(model => model.Part1ListName)</strong></div>
            @Html.DisplayFor(model=>model.Part1ListName)
        </div>
    
        <div class="form-group">
            <div class="col-md-2"><strong>@Html.DisplayNameFor(model => model.Part2ListName)</strong></div>
            @Html.DisplayFor(model=>model.Part2ListName)
        </div>
        
        <div class="form-group">
            <div class="col-md-2"><strong>@Html.DisplayNameFor(model => model.Part3ListName)</strong></div>
            @Html.DisplayFor(model=>model.Part3ListName)
        </div>
        
        <div class="form-group">
            <div class="col-md-2"><strong>@Html.DisplayNameFor(model => model.Part4ListName)</strong></div>
            @Html.DisplayFor(model=>model.Part4ListName)
        </div>
        
        <div class="form-group">
            <div class="col-md-2"><strong>@Html.DisplayNameFor(model => model.Part5ListName)</strong></div>
            @Html.DisplayFor(model=>model.Part5ListName)
        </div>

    </div>
    <div class="modal-footer">
        <button type="submit" id="modal-submit-btn" class="btn btn-primary">Delete</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>

    
    
}
