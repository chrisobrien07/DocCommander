@model DocCommander.Data.NumConfig


@using (Ajax.BeginForm("Edit", "NumConfig", new AjaxOptions() { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "numlist", OnSuccess = "HideForm" }, new { @class = "form-horizontal" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Edit Number Configuration</h4>
    </div>
    <div class="modal-body" id="modal-body">
    @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model=>model.NumConfigId)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsHierarchy, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.IsHierarchy)
                @Html.ValidationMessageFor(model => model.IsHierarchy)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Part1ListName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Part1ListName,(SelectList)ViewBag.ListNames)
                @Html.ValidationMessageFor(model => model.Part1ListName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Part2ListName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Part2ListName,(SelectList)ViewBag.ListNames)
                @Html.ValidationMessageFor(model => model.Part2ListName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Part3ListName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Part3ListName,(SelectList)ViewBag.ListNames)
                @Html.ValidationMessageFor(model => model.Part3ListName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Part4ListName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Part4ListName,(SelectList)ViewBag.ListNames)
                @Html.ValidationMessageFor(model => model.Part4ListName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Part5ListName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Part5ListName,(SelectList)ViewBag.ListNames)
                @Html.ValidationMessageFor(model => model.Part5ListName)
            </div>
        </div>

    </div>
    
    <div class="modal-footer">
        <button type="submit" id="modal-submit-btn" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>
}