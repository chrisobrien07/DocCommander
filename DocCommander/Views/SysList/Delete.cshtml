@model DocCommander.Data.SysList


@using (Ajax.BeginForm("Delete", "SysList", new AjaxOptions() { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "sys-lists", OnSuccess = "HideForm" }, new { @class = "form-horizontal" }))
{
    
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Delete List</h4>
    </div>
    <div class="modal-body" id="modal-body">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <h3>Are you sure you want to delete this?</h3>
        <div class="form-group">
            @Html.DisplayNameFor(model => model.Name)
            @Html.DisplayFor(model=>model.Name)
        </div>
    
        <div class="form-group">
            @Html.DisplayNameFor(model => model.IsActive)
            @Html.DisplayFor(model=>model.IsActive)
        </div>

    </div>
    <div class="modal-footer">
        <button type="submit" id="modal-submit-btn" class="btn btn-primary">Delete</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>

    
    
}