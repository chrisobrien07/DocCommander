@model DocCommander.Data.SysListItem

@using (Ajax.BeginForm("Create", "SysListItem", new AjaxOptions() {HttpMethod="POST",InsertionMode=InsertionMode.Replace,UpdateTargetId="sys-list-items",OnSuccess="HideForm" }, new {@class="form-horizontal" }))
{
        
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Create List</h4>
    </div>
    <div class="modal-body" id="modal-body">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        @Html.Hidden("SysListId",(int)ViewBag.SysListId)

        <div class="form-group">
            @Html.LabelFor(model => model.Value,new {@class="col-sm-3 text-right" })
            @Html.EditorFor(model => model.Value,new {@class="col-sm-9" })            
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ShortCode,new {@class="col-sm-3 text-right" })
            @Html.EditorFor(model => model.ShortCode,new {@class="col-sm-9" })            
        </div>


    </div>
    <div class="modal-footer">
        <button type="submit" id="modal-submit-btn" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>
}
    
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
