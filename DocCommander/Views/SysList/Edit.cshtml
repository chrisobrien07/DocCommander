@model DocCommander.Data.SysList

@using (Ajax.BeginForm("Edit", "SysList", new AjaxOptions() { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "sys-lists", OnSuccess = "HideForm" }, new { @class = "form-horizontal" }))
{
    
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Create List</h4>
    </div>
    <div class="modal-body" id="modal-body">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, new {@class="col-sm-3 text-right" })
            @Html.EditorFor(model=>model.Name,new{@class="col-sm-9"})
        </div>
    
        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, new {@class="col-sm-3 text-right" })
            @Html.EditorFor(model=>model.IsActive,new{@class="col-sm-9"})
        </div>

    </div>
    <div class="modal-footer">
        <button type="submit" id="modal-submit-btn" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>

    
    
}


